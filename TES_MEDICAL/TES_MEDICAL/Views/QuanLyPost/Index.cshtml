                    </div>
                    <div class="header-btn col-3 ">
                        <a class="btn" onclick="Timkiem()" id="btSeach"><i class="fa fa-search" aria-hidden="true"></i>&nbsp;Tìm kiếm</a>
                    </div>
                </div>
                <div class="header-right col-sm-4 row">
                    <div class="header-btn col-7">
                        <a asp-controller="QuanLyPost" asp-action="ThemPost"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Tạo mới</a>
                    </div>
                    <div class="header-btn col-5">
                        <a class="btn" onclick="Clear()" id="btSeach"><i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;Làm mới</a>
                    </div>
                </div>
                <div class="form-check ms-auto mb-2 text-right mt-3">
                    <input class="form-check-input" type="checkbox" value="" id="CheckAll" onchange="reloadpage(1)">
                    <label class="form-check-label" for="flexCheckChecked">
                        Hiện tất cả
                    </label>
                </div>
            </form>
        </div>

        <div id="nameListContainer" class="mt-2" style="margin-inline: 5px;">
            <div class="name-list">





                <style>
                    .list-table {
                        min-height: 400px
                    }
                    list-table table {
                        border: 1px solid gray;
                    }
                    #thead {
                        background-color: rgb(82, 183, 136);
                        color: white;
                    }
                    .table-title-name p {
                        width: 500px;
                        overflow: hidden;
                        white-space: nowrap;
                        text-overflow: ellipsis;
                    }
                    .table-btn a:hover{
                        transform: scale(1.075)
                    }
                    .btn-stutus {
                        background-color: rgb(17, 138, 178);
                        width:30px;
                    }
                    .table-btn a i{
                        color: white;
                    }
                </style>

                <div id="list">

                    <div class="list-table">
                        <table class="table table-bordered text-left w-100 " style="font-size:small">
                            <tbody>
                                <tr id="thead">
                                    <th class="col-6">
                                        Tiêu đề
                                    </th>
                                    <th class="col-2 text-center">
                                        Trạng thái
                                    </th>
                                    <th class="col-2 text-center">
                                        Thể loại
                                    </th>
                                    <th class="col-2 text-center">Thao tác</th>
                                </tr>
                                <tr>
                                    <td class="table-title-name col-6"><p>{{NameTitle}}</p></td>
                                    <td class="col-2 text-center">{{True/False}}</td>
                                    <td class="col-2 text-center">{{Content}}</td>
                                    <td class="table-btn col-2 text-nowrap text-center">
                                        <a class="btn-stutus btn btn-sm active" asp-controller="QuanLyPost" asp-action="SuaPost"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        <a class="btn-stutus btn  btn-sm active" asp-controller="QuanLyPost" asp-action="XoaPost"> <i class="fa fa-trash"></i></a>                        
                                        <a class="btn-stutus btn btn-sm active" asp-controller="QuanLyPost" asp-action="ChiTietPost"> <i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                    <div class="text-right">



                        <div class="pagination-container"><ul class="pagination"><li class="page-item disabled PagedList-skipToPrevious"><a class="page-link" rel="prev">&lt;</a></li><li class="page-item disabled PagedList-skipToNext"><a class="page-link" rel="next">&gt;</a></li></ul></div>
                    </div>
                </div>







            </div>
        </div>
    </div>

    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                </div>
                <div class="modal-body">
                    <div id="myModalContent">
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="modal-footer-btn text-right">
                        <button type="button" id="btSave" class="btn"><i class="fa fa-save" style="background-color: rgb(82, 183, 136);"></i>&nbsp;Lưu</button>
                        <button type="button" id="btupdate" class="btn"><i class="fa fa-save" style="background-color: rgb(82, 183, 136);"></i>&nbsp;Cập nhật</button>
                        <button type="button" id="btPrint" class="btn" onclick="PrintPreview('pannelTinTuc')" style="background-color: rgb(22, 138, 173)"><i class="fa fa-print" aria-hidden="true"></i>&nbsp;In</button>
                        <button type="button" class="btn" id="btclose" data-bs-dismiss="modal" style="background-color: rgb(239, 71, 111); color: white;"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                    </div>
                </div>
            </div>

        </div>
    </div>







</section>