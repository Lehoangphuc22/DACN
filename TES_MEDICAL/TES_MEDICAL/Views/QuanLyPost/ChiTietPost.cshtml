@{
    ViewData["Title"] = "ChiTietPost";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
<section class="content" style="padding:5px;">
    <style>
        .box {
            background-color: white;
            font-family: Source Sans Pro;
        }

        .box-title {
            background-color: rgb(233, 236, 239);
            height: 40px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px
        }

            .box-title h6 {
                padding: 10px;
                font-weight: 600;
                color: rgb(108, 117, 125);
            }

        .header-left {
            left: 0 auto;
        }

        .header-right {
            padding-right: 25px;
            margin-inline-start: auto;
            text-align: right;
        }

        .form-select {
            color: gray;
        }

        .header-btn a {
            background-color: rgb(82, 183, 136);
            color: white;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
            transition: 0.15s all;
        }

            .header-btn a:hover {
                background-color: rgb(118, 200, 147);
                color: white;
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                transform: scale(1.075)
            }

        .form-check {
            margin-right: 25px;
        }

        .name-list {
            padding-inline: 15px;
        }
    </style>
    <div id="myModal" class="modal fade show" aria-modal="true" role="dialog" style="display: block;">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                </div>
                <div class="modal-body">
                    <div id="myModalContent">
                        <style>
                            .main-top .main-title-2 {
                                background-color: white;
                                text-align: right;
                                border-left: 8px solid rgb(82, 183, 136);
                            }
                                .main-top .main-title-2 h2 {
                                    font-weight: 700;
                                }
                            .main-specialist {
                                text-align: right;
                            }
                                .main-specialist label {
                                    color: rgb(82, 183, 136);
                                    font-weight: 600;
                                }
                        </style>

                        <div class="main">
                            <div class="main-detail">
                                <div class="main-top">
                                    <div class="main-title-2">
                                        <h1>{{NAME TITLE}}</h1>
                                    </div>
                                    <div class="main-specialist">
                                        <label>Thể loại: {{TYLE}}</label>
                                    </div>
                                </div>
                                <div class="main-bottom">
                                    <div class="main-content">
                                        {{CONTENT}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="modal-footer-btn text-right">
                        <button type="button" id="btSave" class="btn" style="display: none;">
                            <i class="fa fa-save"
                               style="background-color: rgb(82, 183, 136);"></i>&nbsp;Lưu
                        </button>
                        <button type="button" id="btupdate" class="btn" style="display: none;">
                            <i class="fa fa-save"
                               style="background-color: rgb(82, 183, 136);"></i>&nbsp;Cập nhật
                        </button>
                        <button type="button" id="btPrint" class="btn" onclick="PrintPreview('pannelTinTuc')"
                                style="background-color: rgb(22, 138, 173); display: none;">
                            <i class="fa fa-print"
                               aria-hidden="true"></i>&nbsp;In
                        </button>
                        <button type="button" class="btn" id="btclose" data-bs-dismiss="modal"
                                style="background-color: rgb(239, 71, 111); color: white;">
                                <a asp-controller="Admin" asp-action="QuanLyTinTuc">
                                <i class="fa fa-close"></i>&nbsp;Đóng
                            </a>
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>