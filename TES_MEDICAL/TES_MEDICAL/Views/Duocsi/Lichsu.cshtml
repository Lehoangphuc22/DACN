@{
    ViewData["Title"] = "Lịch Sử Toa Thuốc";
    Layout = "~/Views/Shared/_LayoutEmployer.cshtml";
}
<div class="sidebar">
    <img src="https://i.pinimg.com/474x/8a/a3/70/8aa3705324a61f57b540dd4aa628c3bc.jpg" alt="Doctor's profile picture">
    <h2>{{NAMEPHARMACIST}}</h2>
    <div class="menu-item">Toa thuốc</div>
    <div class="menu-item">Toa thuốc đang phát</div>
    <div class="menu-item">Lịch sử</div>
    <div class="menu-item">Danh sách thuốc</div>
</div>

<div class="main-content">
    <div class="welcome-banner">
        <h1>Xin chào {{ChucVu}}{{Name}}, Đây là trang "QUẢN LÝ TOA THUỐC ĐANG PHÁT"</h1>
    </div>

    <div class="search-section">
        <input type="text" placeholder="Nhập từ khóa cần tìm">
        <button class="refresh-btn" style="margin-left:10px">Làm mới</button>
    </div>

    <div class="table-section">

    <table>
        <thead>
            <tr>
                <th>Tên Bệnh nhân</th>
                <th>Ngày Khám</th>
                <th>Số điện thoại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{NAMEPATIENT}}</td>
                <td>{{dd/mm/yyy}}</td>
                <td>{{NUMBERPHONE}}</td>
                <td>
                    <button class="info-btn btn btn-primary" data-toggle="modal" data-target="#infoModal">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                        </svg>
                    </button>
                </td>

            </tr>
        </tbody>
    </table>

    <div class="pagination">
        <button>&lt;</button>
        <button>1</button>
        <button>&gt;</button>
    </div>
    <div class="modal fade" id="infoModal" tabindex="-1" role="dialog" aria-labelledby="infoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="infoModalLabel">Lịch sử khám</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="medication-tab" data-toggle="tab" href="#medication" role="tab" aria-controls="medication" aria-selected="true">Toa thuốc</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="patient-info-tab" data-toggle="tab" href="#patient-info" role="tab" aria-controls="patient-info" aria-selected="false">Thông tin bệnh nhân</a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="medication" role="tabpanel" aria-labelledby="medication-tab">
                            <table class="table table-bordered mt-3">
                                <thead>
                                    <tr>
                                        <th>Tên thuốc</th>
                                        <th>Số lượng</th>
                                        <th>Vị trí</th>
                                        <th>Đơn giá</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>{{NAMEMEDICINE}}</td>
                                        <td>{{QUANTITY}}</td>
                                        <td>{{POSITION}}</td>
                                        <td>{{PRICE}}</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="patient-info" role="tabpanel" aria-labelledby="patient-info-tab">
                            <div class="container mt-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="border rounded p-3">
                                            <h6>Thông tin bệnh nhân</h6>
                                            <p><strong>Tên bệnh nhân:</strong> {{PATIENT}}</p>
                                            <p><strong>Ngày khám:</strong> {{dd/mm/yyy}}</p>
                                            <p><strong>Ngày lập hóa đơn:</strong> {{dd/mm/yyy}}</p>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
