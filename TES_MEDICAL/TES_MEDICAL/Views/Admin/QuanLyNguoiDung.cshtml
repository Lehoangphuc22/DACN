
@{
    ViewData["Title"] = "QuanLyNguoiDung";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<section class="content" style="padding:5px;">
    <style>
        .box {
            background-color: white;
            font-family: Source Sans Pro;
        }
        .box-title {
            background-color: rgb(233, 236, 239);
            height: 40px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px
        }
            .box-title h6 {
                padding: 10px;
                font-weight: 600;
                color: rgb(108, 117, 125);
            }
        .header-modal-left {
            left: 0 auto;
        }
        .header-modal-right {
            padding-right: 25px;
            margin-inline-start: auto;
            text-align: right;
        }
        .form-select {
            color: gray;
        }
        .header-btn button {
            background-color: rgb(82, 183, 136);
            color: white;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
            transition: 0.15s all;
        }
            .header-btn button:hover {
                background-color: rgb(118, 200, 147);
                box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                transform: scale(1.075);
                color: white;
            }
        .form-check {
            margin-right: 25px;
        }
        .name-list {
            padding-inline: 15px;
        }
    </style>

    <div class="box m-3">
        <div class="box-title mb-4">
            <h6>Quản lý người dùng</h6>
        </div>
        <div class="header row">
            <form action="/NguoiDung" class="d-flex flex-wrap m-2" enctype="multipart/form-data" id="frmSearch" method="get" name="frmSearch">
                <input name="__RequestVerificationToken" type="hidden" value="CfDJ8MtQIGWoub5Lt4etqF1LDyfDeIGlkku6j-AoqthoyxdZHDBq6xEw-nXLhkkitb0AvdWRrKI-11BSfqVp_uhQ0iH-1Ofa3FcGcJHNfNi6hfpCJU55QfPoarL7BB62ky334YxubGFioAqW7YyQoHCftf0">            <div class="header-modal-left col-sm-8 row">
                    <div class="header-input-1 col-7">
                        <input type="text" class="form-control" placeholder="Nhập thông tin cần tìm ..." aria-label="Username" aria-describedby="basic-addon1" id="KeyWordSearch" name="KeyWordSearch" value="">
                    </div>
                </div>
                <div class="header-modal-right col-sm-4 row">
                    <div class="header-btn col-7">
                        <a asp-controller="QuanLyUser" asp-action="ThemUser">
                        <button type="button" class="btn" onclick="Create()" id="btCreateN">
                            <i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Tạo mới</button>
                    </a>
                    </div>
                    <div class="header-btn col-5">
                        <button type="button" class="btn" onclick="Clear()" id="btSeach"><i class="fa fa-refresh" aria-hidden="true"></i>&nbsp;Làm mới</button>
                    </div>
                </div>
                <div class="form-check ms-auto mb-2 text-right mt-3">
                    <input class="form-check-input" type="checkbox" value="" id="checkAll" onchange="reloadpage(1)">
                    <label class="form-check-label" for="flexCheckChecked">
                        Hiện tất cả
                    </label>
                </div>
            </form>
        </div>
        <div id="nameListContainer" class="mt-2" style="margin-inline: 15px;">
            <style>
                .list-table {
                    min-height: 400px
                }

                list-table table {
                    border: 1px solid gray;
                }

                #thead {
                    background-color: rgb(82, 183, 136);
                    color: white;
                }

                .table-btn a:hover {
                    transform: scale(1.075)
                }

                .table-btn .btn-status {
                    background-color: rgb(17, 138, 178);
                    margin-top: 20%;
                    width: 30px;
                }

                    .table-btn .btn-status i {
                        color: white;
                    }

                .listname-img {
                    width: 100px;
                    height: 100px;
                    object-fit: cover;
                    object-position: center center;
                    border-radius: 3%;
                }
            </style>
            <div id="list">
                <div class="list-table" style="min-height:400px">
                    <table class="table table-bordered text-left w-100 " style="font-size:small">
                        <tbody>
                            <tr id="thead">
                                <th class="col-3">
                                    Họ tên
                                </th>

                                <th class="col-2">
                                    Số điện thoại
                                </th>
                                <th class="col-1 text-center">
                                    Chức vụ
                                </th>
                                <th class="col-2 text-center">
                                    Hình ảnh
                                </th>
                                <th class="col-2 text-center">
                                    Trạng thái
                                </th>
                                <th class="text-center">Hành động</th>
                            </tr>
                            <tr>
                                <td class="col-3"><p style="margin-top: 16%;">{{NAMEUSER}}</p></td>
                                <td class="col-2"><p style="margin-top: 25%;">{{NUMBERPHONE}}</p></td>
                                <td class="col-1 text-center">
                                    <p style="margin-top: 60%;">
                                        {{Role}}
                                    </p>
                                </td>
                                <td class="col-2 text-center">
                                    <img class="listname-img" src="https://www.shutterstock.com/image-vector/cute-girl-cartoon-character-korean-600nw-2437940853.jpg">
                                </td>
                                <td class="col-2 text-center"><p style="margin-top: 25%;">{{Status}}</p></td>
                                <td class="table-btn col-2 text-center">
                                    <a class="btn-status btn btn-sm active" asp-controller="QuanLyUser" asp-action="SuaUser" title="Chỉnh sửa thông tin"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a class="btn-status btn btn-sm active" asp-controller="QuanLyUser" asp-action="XoaUser" title="Ngừng hoạt động"> <i class="fa fa-trash"></i></a>

                                    <a class="btn-status btn btn-sm active" asp-controller="QuanLyUser" asp-action="ChiTietUser" title="Thông tin chi tiết"> <i class="fa fa-info-circle" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>

                <div class="text-right">
                    <div class="pagination-container"><ul class="pagination"><li class="page-item disabled PagedList-skipToPrevious"><a class="page-link" rel="prev">&lt;</a></li><li class="page-item active"><span class="page-link">1</span></li><li class="page-item disabled PagedList-skipToNext"><a class="page-link" rel="next">&gt;</a></li></ul></div>
                </div>
            </div>

        </div>
    </div>
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-xl">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">
                    <div id="myModalContent">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="text-right">
                        <button type="button" id="btSave" class="btn" style="background-color: rgb(82, 183, 136); color: white;"><i class="fa fa-save"></i>&nbsp;Lưu</button>
                        <button type="button" id="btupdate" class="btn" style="background-color: rgb(82, 183, 136); color: white;"><i class="fa fa-save"></i>&nbsp;Cập nhật</button>
                        <button type="button" class="btn" id="btclose" data-bs-dismiss="modal" style="background-color: rgb(239, 71, 111); color: white;"><i class="fa fa-close"></i>&nbsp;Đóng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
