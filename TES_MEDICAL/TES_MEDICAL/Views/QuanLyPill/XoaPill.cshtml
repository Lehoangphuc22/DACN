
@{
    ViewData["Title"] = "XoaPill";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #eef2f7;
        margin: 0;
        padding: 0;
    }

    .dialog {
        border: 1px solid #d1d9e6;
        padding: 25px;
        width: 350px;
        margin: 100px auto;
        text-align: center;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .dialog img {
            width: 60px;
            height: 60px;
            margin-bottom: 20px;
        }

        .dialog h3 {
            font-size: 18px;
            color: #333333;
            margin-bottom: 15px;
        }

        .dialog p {
            color: #777777;
            font-size: 14px;
            margin-bottom: 25px;
        }

    .buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
    }

        .buttons button {
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .buttons button:first-child {
                background-color: #f44336;
                color: white;
            }

                .buttons button:first-child:hover {
                    background-color: #e53935;
                    transform: translateY(-2px);
                }

            .buttons button:last-child {
                background-color: #9e9e9e;
                color: white;
            }

                .buttons button:last-child:hover {
                    background-color: #757575;
                    transform: translateY(-2px);
                }
</style>

<form id="form1" runat="server">
    <div class="dialog">
        <img src="https://image.similarpng.com/very-thumbnail/2021/06/Warning-icon.-The-attention-icon.png" alt="Warning">
        <h3>Bạn có muốn vô hiệu hóa người dùng này?</h3>
        <p>Thao tác không thể thay đổi!</p>
        <div class="buttons">
            <button action="Warning">Xóa</button>
            <button>Hủy</button>
        </div>
    </div>
</form>
