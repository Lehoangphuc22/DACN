@{
    ViewData["Title"] = "SuaPost";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}

<section class="content" style="padding:5px;">

    <style>
        .box-background {
            background-color: white;
        }

        .box-title {

            background-color: rgb(233, 236, 239);

        }

        .box-title h6 {
            padding: 10px;
            font-weight: 600;
            color: rgb(108, 117, 125);
        }

        form {
            padding-inline: 30px;
        }

        .box-left {
            margin-left: 10px;
            width: 67%;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-title-label {
            width: 150px;
            height: 40px;
            background-color: rgb(82, 183, 136);
            margin-top: 10px;
            margin-left: -15px;
            border-bottom-right-radius: 5px;
            border-top-right-radius: 5px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-title-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

        .box-left-title .form-floating label {
            color: gray;
            font-weight: 400;
        }

        .box-right {
            width: 30%;
            margin-left: 25px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-specialist-label {
            width: 150px;
            height: 40px;
            background-color: rgb(82, 183, 136);
            margin-top: 10px;
            margin-left: -35px;
            border-bottom-right-radius: 5px;
            border-top-right-radius: 5px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-specialist-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

        .box-specialist select {
            color: gray;
        }

        .box-status-label {
            width: 150px;
            height: 40px;
            background-color: rgb(82, 183, 136);
            margin-top: 10px;
            margin-left: -35px;
            border-bottom-right-radius: 5px;
            border-top-right-radius: 5px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-status-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

        .box-status .form-check {
            margin-left: 20px;
        }

        .box-status .form-check label {
            color: gray;
        }

        .box-content {
            margin-inline: 5px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-content-label {
            width: 150px;
            height: 40px;
            background-color: rgb(82, 183, 136);
            margin-top: 10px;
            margin-left: -15px;
            border-bottom-right-radius: 5px;
            border-top-right-radius: 5px;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .box-content-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

        .box-btn .btn-savee {
            background-color: rgb(82, 183, 136);
            color: white;
            border: none;
        }

        .box-btn .btn-closee {
            background-color: rgb(239, 71, 111);
            color: white;
            border: none;
        }

        .note-editable {
            background-color: white;
        }

        .box-button {
            background-color: rgb(82, 183, 136);
            color: white;
            border: 2px solid rgb(82, 183, 136);
            height: 40px;
            padding: 0 30px 0 30px;
            transition: 0.25s all;
            font-weight: 400;
        }

        .box-button:hover {
            border: 2px solid rgb(82, 183, 136);
            color: rgb(82, 183, 136);
            background-color: white;
        }
    </style>

    <div class="box p-3">
        <div class="box-background">
            <div class="box-title">
                <h6>Sửa bài viết</h6>
            </div>
            <br>
            <form class="row g-3" method="post" action="/TinTuc/ThemTinTuc" novalidate="novalidate">
                <input hidden="" type="text" id="Hinh" name="Hinh" value="">
                <div class="box-left form-group">
                    <div class="box-left-title">
                        <div class="box-title-label">
                            <label class="form-label">Tiêu đề (*)</label>
                        </div>

                        <div class="form-floating mt-3 mb-3">
                            <textarea class="form-control" style="height: 130px" data-val="true"
                                      data-val-required="Bạn cần nhập tiêu đề" id="TieuDe" name="TieuDe"></textarea>
                            <span class="text-danger field-validation-valid" data-valmsg-for="TieuDe"
                                  data-valmsg-replace="true"></span>
                        </div>

                    </div>
                </div>
                <div class="box-right form-group row mt-3">
                    <div class="box-specialist">
                        <div class="box-specialist-label">
                            <label class="form-label">Thể loại (*)</label>
                        </div>
                        <div class="col-12 mt-3 mb-3">
                            <select class="form-select" data-val="true" data-val-required="Bạn cần chọn thể loại"
                                    id="MaTL" name="MaTL">
                                <option value="">Chọn thể loại</option>
                                <option value="ab215dc0-5855-42c3-85a5-ef00a2fabe65">Cảnh báo bệnh</option>
                                <option value="ab6fe512-9c64-4eea-bc14-25a517423c58">Chăm sóc sức khoẻ</option>
                                <option value="f074c6bd-c1e9-4396-b425-6a426fb8ca88">Sức khỏe cộng đồng </option>
                                <option value="7644ac01-b920-49c1-93c5-251319bbc90e">Tin Covid-19</option>
                            </select>
                            <span class="field-validation-valid text-danger" data-valmsg-for="MaTL"
                                  data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="box-status">
                        <div class="box-status-label">
                            <label class="form-label">Trạng thái</label>
                        </div>
                        <div class="form-check mt-3 mb-3">
                            <input class="form-check-input" type="checkbox" id="gridCheck" checked="checked"
                                   data-val="true" data-val-required="The TrangThai field is required." name="TrangThai"
                                   value="true">
                            <label class="form-check-label" for="gridCheck">
                                Đang hoạt động
                            </label>
                        </div>
                    </div>
                </div>
                <div class="box-content col-12">

                    <div class="d-flex justify-content-between">
                        <div class="box-content-label mb-3 mt-3">
                            <label class="form-label">Nội dung (*)</label>
                        </div>
                        <div class="mt-2">
                            <a class="btn text-light" style="background-color: #52B788" onclick="_Preview()">
                                <i class="fas fa-eye"></i> Xem trước
                            </a>
                        </div>
                    </div>

                    <div>
                        <textarea rows="20" class="form-control" placeholder="Nhập nội dung ..." data-val="true" data-val-required="Bạn cần nhập nội dung bài viết" id="NoiDung" name="NoiDung" style="display: none;"></textarea><div class="note-editor note-frame"><div class="note-dropzone"><div class="note-dropzone-message"></div></div><div class="note-editing-area"><div class="note-handle"><div class="note-control-selection" style="display: none;"><div class="note-control-selection-bg"></div><div class="note-control-holder note-control-nw"></div><div class="note-control-holder note-control-ne"></div><div class="note-control-holder note-control-sw"></div><div class="note-control-sizing note-control-se"></div><div class="note-control-selection-info"></div></div></div><textarea class="note-codable" aria-multiline="true"></textarea><div class="note-editable" contenteditable="true" role="textbox" aria-multiline="true" spellcheck="true" autocorrect="true" style="height: 300px;"><p><br></p></div></div><output class="note-status-output" role="status" aria-live="polite"></output></div>
                    </div>
                </div>
                <div class="box-btn d-grid gap-2 d-md-flex justify-content-md-end">
                    <button class="btn-savee btn" type="submit"><i class="fas fa-save"></i>Cập nhật</button>
                    <a class="btn-closee btn" href="https://localhost:44303/TinTuc">
                        <i class="fas fa-close"></i>
                        Đóng
                    </a>
                </div>
                <input name="__RequestVerificationToken" type="hidden"
                       value="CfDJ8MtQIGWoub5Lt4etqF1LDydNuAZ2Aws6WPaOqb4F0FctBDyyh4Jk_x0XOz7uhHTuQEIC0HsElxi1Nh-7gJcfpnbywCy1CmNhygeLiRVnIrWyWbAbr1yfNZen4VnVRy8F6AxM5iKMc1BeDwcryFLfK4c"><input name="TrangThai" type="hidden" value="false">
            </form>

        </div>
    </div>

    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-fullscreen">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                </div>
                <div class="modal-body">
                    <div id="myModalContent">
                    </div>
                </div>


                <div class="modal-footer">
                    <div class="modal-footer-btn text-right">
                        <button type="button" class="btn" onclick="CloseModal()" id="btclose" data-bs-dismiss="modal"
                                style="background-color: rgb(239, 71, 111); color: white;">
                            <i class="fa fa-close"></i>&nbsp;Đóng
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>


</section>