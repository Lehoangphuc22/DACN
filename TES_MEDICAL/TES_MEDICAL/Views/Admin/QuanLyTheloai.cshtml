
@{
    ViewData["Title"] = "QuanLyTheloai";
    Layout = "~/Views/Shared/_LayoutQuanLy.cshtml";
}
<section class="content" style="padding:5px;">

    <style>
        .box {
            background-color: white;
            font-family: Source Sans Pro;
        }

        .box-title {
            background-color: rgb(233, 236, 239);
            height: 40px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px
        }

        .box-title h6 {
            padding: 10px;
            font-weight: 600;
            color: rgb(108, 117, 125);
        }

        .header-left {
            left: 0 auto;
        }

        .header-right {
            padding-right: 25px;
            margin-inline-start: auto;
            text-align: right;
        }

        .form-select {
            color: gray;
        }

        .header-btn button {
            background-color: rgb(82, 183, 136);
            color: white;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
            transition: 0.15s all;
        }

        .header-btn button:hover {
            background-color: rgb(118, 200, 147);
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
            transform: scale(1.1);
            color: white;
        }

        .form-check {
            margin-right: 25px;
        }

        .name-list {
            padding-inline: 15px;
        }
    </style>
    <div class="box m-3">
        <div class="box-title mb-4">
            <h6>Quản lý thể loại</h6>
        </div>
        <div class="header row">
            <form action="/TheLoai" class="d-flex flex-wrap m-2" enctype="multipart/form-data" id="frmSearch"
                  method="get" name="frmSearch">
                <input name="__RequestVerificationToken" type="hidden"
                       value="CfDJ8MtQIGWoub5Lt4etqF1LDyeC08rAUY2K037cOb5CWyU_3rkmJiqVMCkB0SJx8qdWFBr_v8a7P_IONU_-8fyMzBl65I-VlS30dv1q_9s66cwEI_Cw6xuZ60FehQRIlKWf3BiHQ2CzMQyKv6u7EdGVeYA">
                <div class="header-left col-sm-8 row">
                    <div class="header-input-1 col-7">
                        <input type="text" class="form-control" placeholder="Nhập tên thể loại ..."
                               aria-label="Username" aria-describedby="basic-addon1" id="TenTLSearch" name="TenTLSearch"
                               value="">
                    </div>
                </div>
                <div class="header-right col-sm-4 row">
                    <div class="header-btn col-7">
                        <button type="button" class="btn" onclick="Create()" id="btCreateN">
                            <a asp-controller="QuanLyType" asp-action="ThemLoai">
                            <i class="fa fa-plus-circle"
                               aria-hidden="true"></i>&nbsp;Tạo mới
                            </a>
                        </button>
                    </div>
                    <div class="header-btn col-5">
                        <button type="button" class="btn" onclick="Clear()" id="btSeach">
                            <i class="fa fa-refresh"
                               aria-hidden="true"></i>&nbsp;Làm mới
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div id="nameListContainer" class="mt-4" style="margin-inline: 15px">
            <style>
                .list-table {
                    min-height: 400px
                }

                list-table table {
                    border: 1px solid gray;
                }

                #thead {
                    background-color: rgb(82, 183, 136);
                    color: white;
                }

                .table-btn a:hover {
                    transform: scale(1.075)
                }

                .btn-edit {
                    background-color: rgb(17, 138, 178);
                }

                .table-btn a i {
                    color: white;
                }
            </style>
            <div id="list">

                <div class="list-table">
                    <table class="table table-bordered text-left w-100 " style="font-size:small">
                        <tbody>
                            <tr id="thead">
                                <th class="col-8">
                                    Tên thể loại
                                </th>
                                <th class="col-4 text-center">Thao tác</th>
                            </tr>
                            <tr>
                                <td class="col-8">{{NAMETYPE}}</td>
                                <td class="table-btn text-nowrap col-4 text-center">
                                    <a class="btn-edit btn btn-sm active" title="Chỉnh sửa"
                                       onclick="Edit('ab215dc0-5855-42c3-85a5-ef00a2fabe65')">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
                <div class="text-right">
                    <div class="pagination-container">
                        <ul class="pagination">
                            <li class="page-item disabled PagedList-skipToPrevious">
                                <a class="page-link"
                                   rel="prev">&lt;</a>
                            </li>
                            <li class="page-item active"><span class="page-link">1</span></li>
                            <li class="page-item disabled PagedList-skipToNext">
                                <a class="page-link" rel="next">&gt;</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="myModal" class="modal fade">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-body">

                    <div id="myModalContent">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="text-right">
                        <button type="button" id="btSave" class="btn"
                                style="background-color: rgb(82, 183, 136); color: white;">
                            <i class="fa fa-save"></i>&nbsp;Lưu
                        </button>
                        <button type="button" id="btupdate" class="btn"
                                style="background-color: rgb(82, 183, 136); color: white;">
                            <i class="fa fa-save"></i>&nbsp;Cập nhật
                        </button>
                        <button type="button" id="btPrint" class="btn" onclick="PrintPreview('pannelTheLoai')"
                                style="background-color: rgb(22, 138, 173); color: white;">
                            <i class="fa fa-print"
                               aria-hidden="true"></i>&nbsp;Print
                        </button>
                        <button type="button" class="btn" id="btclose" data-bs-dismiss="modal"
                                style="background-color: rgb(239, 71, 111); color: white;">
                            <i class="fa fa-close"></i>&nbsp;Đóng
                        </button>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>





</section>